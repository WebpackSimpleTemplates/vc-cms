{% extends 'layout.html.twig' %}

{% block title %}Канал удалён{% endblock %}

{% block content %}
<a
    class="btn btn-sm mb-2"
    href="{{ path('app_channel_index') }}"
>
    <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M15.41 16.59 10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"></path></svg>
    Каналы
</a>
<div class="card shadow bg-base-100 p-3 w-max flex-row gap-2">
    Канал "{{ channel.title }}" был удалён
    <span class="font-bold">{{ channel.deletedAt.format('d.m.Y H:i:s') }}</span>
    пользователем
    <span class="font-bold">{{ channel.deletedBy.displayName }}</span>
</div>
{% endblock %}
