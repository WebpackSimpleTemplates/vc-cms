{% extends 'layout.html.twig' %}

{% block title %}Все консультанты{% endblock %}

{% block content %}
    {{ include('channel/_header.html.twig') }}
    <div class="card shadow bg-base-100 p-3">
        {{ include('channel/_users_header.html.twig') }}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ФИО</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullname }}</td>
                        <td>
                            {% if user.connected %}
                                <button disabled class="btn btn-sm">
                                    Подключен
                                </button>
                            {% else %}
                                <form method="post" action="{{ path('app_channel_users_connect', { 'id': channel.id, 'user': user.id }) }}">
                                    <button type="submit" class="btn btn-sm">
                                        Подключить
                                    </button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Пусто</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
