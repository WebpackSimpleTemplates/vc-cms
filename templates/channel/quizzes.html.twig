{% extends 'layout.html.twig' %}

{% block title %}Подключенные вопросы{% endblock %}

{% block content %}
    {{ include('channel/_header.html.twig') }}
    <div class="card shadow bg-base-100 p-3">
        {{ include('channel/_quizzes_header.html.twig') }}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for quiz in pagination %}
                    <tr>
                        <td>{{ quiz.id }}</td>
                        <td>{{ quiz.title }}</td>
                        <td>
                            <form
                                method="post"
                                action="{{ path('app_channel_quizzes_disconnect', { 'id': channel.id, 'quiz': quiz.id }) }}"
                                onsubmit="return confirm('Вы уверены, что хотите отключить вопрос от данного канала?');"
                            >
                                <button type="submit" class="btn btn-sm">
                                    Отключить
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Пусто</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
