{% extends 'layout.html.twig' %}

{% block title %}Все каналы{% endblock %}

{% block content %}
    {{ include('user/_header.html.twig') }}
    <div class="card shadow bg-base-100 p-3">
        {{ include('user/_channels_header.html.twig') }}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Префикс</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for channel in pagination %}
                    <tr>
                        <td>{{ channel.id }}</td>
                        <td>{{ channel.prefix }}</td>
                        <td>{{ channel.title }}</td>
                        <td>{{ channel.description }}</td>
                        <td>
                            {% if channel.id in connectedIds %}
                                <button disabled class="btn btn-sm">
                                    Подключен
                                </button>
                            {% else %}
                                <form method="post" action="{{ path('app_user_channels_connect', { 'id': user.id, 'channel': channel.id }) }}">
                                    <button type="submit" class="btn btn-sm">
                                        Подключить
                                    </button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Пусто</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
