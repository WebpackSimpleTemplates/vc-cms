<div role="tablist" class="tabs tabs-border">
  <a
    role="tab"
    href="{{ path('app_quiz_channels', { 'id': quiz.id }) }}"
    class="tab{% if app.request.attributes.get('_route') == 'app_quiz_channels' %} tab-active{% endif %}"
  >
    Подключенные
  </a>
  <a
    role="tab"
    href="{{ path('app_quiz_channels_all', { 'id': quiz.id }) }}"
    class="tab{% if app.request.attributes.get('_route') == 'app_quiz_channels_all' %} tab-active{% endif %}"
  >
    Все
  </a>
</div>
