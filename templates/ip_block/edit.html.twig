{% extends 'layout.html.twig' %}

{% block title %}Редактирование блокировки по IP{% endblock %}

{% block content %}
<a class="btn btn-sm mb-2" href="{{ path('app_ip_block_index') }}">
    <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M15.41 16.59 10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"></path></svg>
    Чёрный список
</a>
<div class="card shadow bg-base-100 p-3 max-w-md mx-auto">
    <div class="text-xl mb-4">Редактирование блокировки по IP</div>

    {{ include('ip_block/_form.html.twig') }}

    <div class="h-3" ></div>
    <form class="ml-auto w-max" method="post" action="{{ path('app_ip_block_delete', {'id': ip_block.id}) }}" onsubmit="return confirm('Вы уверны что хотите снять блокировку?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ip_block.id) }}">
        <button class="btn btn-error btn-outline">
            Удалить
        </button>
    </form>
</div>
{% endblock %}
