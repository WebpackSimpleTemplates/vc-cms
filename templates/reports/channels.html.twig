{% extends 'layout.html.twig' %}

{% block title %}Отчёты{% endblock %}

{% block content %}
{% include "reports/_header.html.twig" %}
<div class="card p-3 bg-base-100 shadow overflow-auto">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Канал</th>
                <th class="bg-error/15">Пропущено звонков</th>
                <th class="bg-error/15">Макс. время ожид.</th>
                <th class="bg-error/15">Средн. время ожид.</th>
                <th class="bg-error/15">Мин. время ожид.</th>
                <th class="bg-success/5">Принято звонков</th>
                <th class="bg-success/5">Макс. время ожид.</th>
                <th class="bg-success/5">Средн. время ожид.</th>
                <th class="bg-success/5">Мин. время ожид.</th>
                <th class="bg-success/5">Макс. время обсл.</th>
                <th class="bg-success/5">Средн. время обсл.</th>
                <th class="bg-success/5">Мин. время обсл.</th>
            </tr>
        </thead>
        <tbody>
            {% for channel in pagination %}
                <tr>
                    <td>
                        {{ channel.id }}
                    </td>
                    <td>
                        {{ channel.title }}
                    </td>
                    <td class="bg-error/15">
                        {{ channel.rejected }}
                    </td>
                    <td class="bg-error/15">
                        {{ channel.maxWaitRe }}
                    </td>
                    <td class="bg-error/15">
                        {{ channel.avgWaitRe }}
                    </td>
                    <td class="bg-error/15">
                        {{ channel.minWaitRe }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.accepted }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.maxWaitAc }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.avgWaitAc }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.minWaitAc }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.maxServ }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.avgServ }}
                    </td>
                    <td class="bg-success/5">
                        {{ channel.minServ }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
