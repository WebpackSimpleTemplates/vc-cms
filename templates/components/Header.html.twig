      {% if this.user.avatar %}
        <img class="h-3 w-3 rounded-full object-cover object-center" src="{{ this.user.avatar }}">
      {% endif %}
      {{ this.user.email }}
    </div>
    <ul tabindex="0" class="dropdown-content mt-3 menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-xl">
      <li>
        <a href="{{ path('app_user_profile') }}">
